    "browserify": "^13.0.0",
    "http-server": "^0.8.5",
    "phantomjs": "^2.1.3",
    "standard": "^6.0.5",
    "tap-spec": "^4.1.1",
    "tape": "^4.4.0",
    "tape-run": "^2.1.3",
    "webpack": "^1.12.13"
  }
}
